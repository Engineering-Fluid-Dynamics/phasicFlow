#!/bin/sh
set -e  # Exit immediately if a command exits with a non-zero status
cd ${0%/*} || exit 1    # Run from this directory

echo "\n<--------------------------------------------------------------------->"
echo "1) Creating geometry"
echo "<--------------------------------------------------------------------->\n"
geometryPhasicFlow

echo "\n<--------------------------------------------------------------------->"
echo "2) Running the case"
echo "<--------------------------------------------------------------------->\n"
iterateGeometry

echo "\n<--------------------------------------------------------------------->"
echo "2) Converting to VTK files"
echo "<--------------------------------------------------------------------->\n"
pFlowToVTK --no-particles

#------------------------------------------------------------------------------
